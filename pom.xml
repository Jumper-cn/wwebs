				<scope>test</scope>
			</dependency>

			<!-- cache utils -->
			<dependency>
				<groupId>redis.clients</groupId>
				<artifactId>jedis</artifactId>
				<version>${redis_clients_version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.commons</groupId>
