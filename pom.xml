<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.jumper</groupId>
	<artifactId>wwebs</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>
	<name>${project.artifactId}</name>
	<description>The parent project of wwebs</description>
	<url>http://www.jumper.com</url>
	<inceptionYear>2015</inceptionYear>
	<organization>
		<name>jumper</name>
		<url>http://www.jumper.com</url>
	</organization>

	<!-- 配置部署的远程仓库 -->
	<distributionManagement>
		<snapshotRepository>
			<id>nexus-deployment</id>
			<name>nexus distribution deployment repository</name>
			<url>http://192.168.0.252:8081/nexus/content/repositories/releases/</url>
		</snapshotRepository>
	</distributionManagement>

	<modules>
		<module>framework</module>
		<module>modules</module>
		<module>admin</module>
		<module>wechat</module>
	</modules>

	<properties>
		<!-- Common libs -->
		<spring_version>4.2.3.RELEASE</spring_version>
		<spring_redis_version>1.6.1.RELEASE</spring_redis_version>
		<spring_swagger_version>1.0.2</spring_swagger_version>
		<redis_clients_version>2.4.2</redis_clients_version>
		<pool2_version>2.4.2</pool2_version>
		<hibernate_version>3.6.9.Final</hibernate_version>
		<servlet_version>2.5</servlet_version>
		<jstl_version>1.2</jstl_version>
		<jta_version>1.1</jta_version>
		<javassist_version>3.12.1.GA</javassist_version>
		<aspectjweaver_version>1.7.2</aspectjweaver_version>
		<dbcp_version>1.4</dbcp_version>
		<commons_beanutils_version>1.6</commons_beanutils_version>
		<commons_collections_version>3.1</commons_collections_version>
		<commons_lang_version>2.4</commons_lang_version>
		<commons_lang3_version>3.3.2</commons_lang3_version>
		<httpcomponents_version>4.3.3</httpcomponents_version>
		<cglib_version>2.1_3</cglib_version>
		<mysql_version>5.1.24</mysql_version>
		<jackson_version>1.9.9</jackson_version>
		<fasterxml_version>2.3.2</fasterxml_version>
		<jersey_version>2.15</jersey_version>
		<!-- Log libs -->
		<slf4j_version>1.6.2</slf4j_version>
		<jcl_version>1.1</jcl_version>
		<logback_version>1.0.6</logback_version>
		<!-- Test libs -->
		<junit_version>4.11</junit_version>
		<!-- Build args -->
		<project.build.sourceEncoding>utf8</project.build.sourceEncoding>
	</properties>
	<dependencyManagement>
		<dependencies>
			<!-- 第三方lib -->
			<dependency>
				<groupId>com.cloopen</groupId>
